{
  "$defs": {
    "proto.CustomerInfo.jsonschema.strict.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "description": "CustomerInfo represents customer information with nested validations",
      "properties": {
        "address": {
          "description": "address is optional but may be required by parent message",
          "maxLength": 500,
          "minLength": 10,
          "type": "string"
        },
        "email": {
          "description": "email must be a valid email",
          "format": "email",
          "minLength": 1,
          "type": "string"
        },
        "name": {
          "description": "name is required",
          "maxLength": 100,
          "minLength": 2,
          "type": "string"
        },
        "phone": {
          "description": "phone must match phone pattern",
          "minLength": 1,
          "pattern": "^\\+?[1-9]\\d{1,14}$",
          "type": "string"
        }
      },
      "required": [
        "email",
        "phone",
        "address",
        "name"
      ],
      "title": "Customer Info",
      "type": "object"
    }
  },
  "$id": "proto.CustomerInfo.jsonschema.strict.bundle.json",
  "$ref": "#/$defs/proto.CustomerInfo.jsonschema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}
