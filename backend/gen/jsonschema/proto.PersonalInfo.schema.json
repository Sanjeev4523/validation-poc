{
  "$id": "proto.PersonalInfo.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "PersonalInfo represents personal information with age validation",
  "patternProperties": {
    "^(dateOfBirth)$": {
      "$ref": "google.protobuf.Timestamp.schema.json",
      "description": "dateOfBirth is required"
    }
  },
  "properties": {
    "date_of_birth": {
      "$ref": "google.protobuf.Timestamp.schema.json",
      "description": "dateOfBirth is required"
    },
    "email": {
      "description": "email must be valid",
      "format": "email",
      "minLength": 1,
      "type": "string"
    },
    "name": {
      "description": "name is required",
      "maxLength": 100,
      "minLength": 2,
      "type": "string"
    },
    "phone": {
      "description": "phone must match pattern",
      "minLength": 1,
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "type": "string"
    }
  },
  "required": [
    "name",
    "email",
    "phone",
    "date_of_birth"
  ],
  "title": "Personal Info",
  "type": "object"
}
