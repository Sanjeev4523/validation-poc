{
  "$id": "proto.SimpleUser.jsonschema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "SimpleUser represents a user with basic string, email, and numeric validations",
  "patternProperties": {
    "^(contact_info)$": {
      "$ref": "proto.ContactInfo.jsonschema.json",
      "description": "contactInfo is an optional nested message"
    }
  },
  "properties": {
    "age": {
      "anyOf": [
        {
          "maximum": 120,
          "minimum": 18,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "description": "age must be between 18 and 120"
    },
    "contactInfo": {
      "$ref": "proto.ContactInfo.jsonschema.json",
      "description": "contactInfo is an optional nested message"
    },
    "email": {
      "description": "email must be a valid email format",
      "format": "email",
      "minLength": 1,
      "type": "string"
    },
    "name": {
      "description": "name must be between 3 and 50 characters",
      "maxLength": 50,
      "minLength": 3,
      "pattern": "^[a-zA-Z ]+$",
      "type": "string"
    }
  },
  "required": [
    "name",
    "email",
    "age"
  ],
  "title": "Simple User",
  "type": "object"
}
