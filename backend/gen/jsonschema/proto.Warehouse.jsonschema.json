{
  "$id": "proto.Warehouse.jsonschema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Warehouse represents a warehouse with inventory",
  "patternProperties": {
    "^(warehouse_id)$": {
      "description": "warehouseId is required",
      "maxLength": 20,
      "minLength": 4,
      "pattern": "^WH-[A-Z0-9]+$",
      "type": "string"
    }
  },
  "properties": {
    "capacity": {
      "anyOf": [
        {
          "exclusiveMaximum": 2147483648,
          "exclusiveMinimum": 0,
          "type": "integer"
        },
        {
          "pattern": "^-?[0-9]+$",
          "type": "string"
        }
      ],
      "description": "capacity is the maximum number of items"
    },
    "items": {
      "description": "items is a repeated field",
      "items": {
        "$ref": "proto.InventoryItem.jsonschema.json"
      },
      "type": "array"
    },
    "location": {
      "description": "location is required",
      "maxLength": 100,
      "minLength": 3,
      "type": "string"
    },
    "warehouseId": {
      "description": "warehouseId is required",
      "maxLength": 20,
      "minLength": 4,
      "pattern": "^WH-[A-Z0-9]+$",
      "type": "string"
    }
  },
  "required": [
    "warehouseId",
    "location",
    "capacity"
  ],
  "title": "Warehouse",
  "type": "object"
}
