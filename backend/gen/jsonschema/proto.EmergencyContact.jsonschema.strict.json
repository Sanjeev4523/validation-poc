{
  "$id": "proto.EmergencyContact.jsonschema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "EmergencyContact represents emergency contact information",
  "properties": {
    "name": {
      "description": "name is required",
      "maxLength": 100,
      "minLength": 2,
      "type": "string"
    },
    "phone": {
      "description": "phone is required when relationship is SPOUSE",
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "type": "string"
    },
    "relationship": {
      "description": "relationship is required",
      "enum": [
        "RELATIONSHIP_SPOUSE",
        "RELATIONSHIP_PARENT",
        "RELATIONSHIP_SIBLING",
        "RELATIONSHIP_FRIEND",
        "RELATIONSHIP_OTHER"
      ],
      "title": "Relationship",
      "type": "string"
    }
  },
  "required": [
    "name",
    "relationship",
    "phone"
  ],
  "title": "Emergency Contact",
  "type": "object"
}
